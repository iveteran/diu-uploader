{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "diu-uploader",
  "version": "0.1.0",
  "identifier": "works.matrix.diu-uploader",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "DIU Documents Uploader",
        "width": 800,
        "height": 600,
        "fullscreen": false,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "app",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
